Процедура Тест_Должен_СоздатьКнопку() Экспорт

	Форма = ПолучитьФорму();
	Кнопка = Форма.Элементы.Добавить("Кнопка1", "КнопкаФормы", Неопределено);
	Форма.ПоказатьНеМодально();

	юТест.ПроверитьРавенство(Форма.Элементы.Количество(), 1);

